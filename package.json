{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "next": "yarn apps/next",
    "next:start": "yarn apps/next start",
    "services": "yarn packages/services",
    "app": "yarn packages/app",
    "cms": "yarn packages/cms",
    "cms:start": "yarn packages/cms start",
    "prepare": "husky install",
    "test": "turbo run test",
    "hasura": "hasura --envfile ../.env --project ./hasura",
    "hasura-cms": "hasura --envfile ../.env --endpoint http://localhost:8090 --project ./hasura-cms",
    "docker:cms:start": "docker compose --profile cms up -d",
    "docker:cms:stop": "docker compose --profile cms down",
    "docker:cms:clean": "docker compose --profile cms down -v"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@types/react": "17.0.19",
    "@types/react-native": "0.64.13",
    "eslint": "8.21.0",
    "eslint-config-custom": "*",
    "hasura-cli": "^2.7.0",
    "husky": "7.0.2",
    "jest": "27.0.6",
    "lint-staged": "11.1.2",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "0.2.1",
    "turbo": "1.6.3",
    "typescript": "4.9.4"
  },
  "resolutions": {
    "metro": "0.72.3",
    "json-rpc-engine": "5.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "packageManager": "yarn@3.3.1"
}
